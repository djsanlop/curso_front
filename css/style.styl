azul = #22BCE0
naranja = #DD4F24
gris_obscuro = #444
gris_texto = #7A7A7A

@font-face {
	font-family: 'font-imagenes';
	src:url('../fonts/icomoon.eot?-a7ybwc');
	src:url('../fonts/icomoon.eot?#iefix-a7ybwc') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-a7ybwc') format('woff'),
		url('../fonts/icomoon.ttf?-a7ybwc') format('truetype'),
		url('../fonts/icomoon.svg?-a7ybwc#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a 
	color naranja

body
	background #E8E8E8
	color gris_obscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, .5)
	padding 1em
	text-align center
	width 100%

	h3
		font-size 14px 
		font-weight normal

		strong
			display block
		.mejor
			&:before
			&:after
				content " - "

header
	background gris_obscuro
	box-shadow 0 5px 0 rgba(0, 0, 0, .2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 55

	.logo
		border-right 1px solid azul 
		width 60px

		img 
			width 52px
	.titular
		margin: 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img 
				border-radius 50%
				height 50px
				width 50px

		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top: 15px
			width 50%
			z-index 0


nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px 
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap
		
		li 
			display inline-block

			a 
				color white
				display block
				margin 0 0.2em 
				padding 0 0.2em
				text-decoration none
				


				&:hover
					background rgba(black, .1)

.posts
	padding 0.5em
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, .5)
		color gris_texto

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				
				.comentarios
					color white
					background gris_obscuro 
					border-radius 3px
					padding 2px 5px 
					text-decoration none
					margin 0 1em
				
			.votos
				float left
				
				.down
				.up
					text-decoration none
					font-family font-imagenes
					font-size 1.5em
					vertical-align middle

				.down
					color red 
					&:before
						content "\e603"
				.up
					color green
					&:before
						content "\e602"

		.descripcion
			.detalles
				height 160px
				margin-left 140px
				.autor
					margin 0.5em 0 1em 0

				.fecha 
					float right
					padding 0 0.7em 0 0
					margin 0

				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo 
					color gris_obscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0 

			.imagen
				float left
				margin 0
				img 
					height 120px
					vertical-aling top
					width 120px
					padding 0.5em 0 0 0.5em
		

.left
	float left

.right
	float right